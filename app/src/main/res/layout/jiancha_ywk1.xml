<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/colorWhiteBG"
    android:layout_height="match_parent"
    android:layout_column="2"
    android:orientation="vertical">

        <TableRow
            android:layout_marginTop="2dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <TextView
                android:textColor="@color/colorText"
                android:text="被检单位："
                android:id="@+id/tv1"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:textSize="15dp"
                android:textColor="@color/black"
                android:id="@+id/et1"
                android:layout_height="35dp"
                android:layout_width="match_parent"/>
        </TableRow>

        <TableRow
            android:layout_marginTop="2dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <TextView
                android:textColor="@color/colorText"
                android:text="日期："
                android:id="@+id/tv2"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Spinner
                android:id="@+id/sp2_changsuo"
                android:layout_height="40dp"
                android:layout_width="match_parent"/>
        </TableRow>
        <TableRow
            android:layout_marginTop="2dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <TextView
                android:textColor="@color/colorText"
                android:text="业务库地址："
                android:id="@+id/tv3"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="35dp"/>

            <EditText
                android:textSize="15dp"
                android:textColor="@color/black"
                android:id="@+id/et3"
                android:layout_height="35dp"
                android:layout_width="match_parent"/>
        </TableRow>
        <TableRow
            android:layout_marginTop="2dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <TextView
                android:textColor="@color/colorText"
                android:text="保卫部负责人："
                android:id="@+id/tv4"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="35dp"/>

            <EditText
                android:textSize="15dp"
                android:textColor="@color/black"
                android:id="@+id/et4"
                android:layout_height="35dp"
                android:layout_width="match_parent"/>
        </TableRow>
        <TableRow
            android:layout_marginTop="2dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <TextView
                android:textColor="@color/colorText"
                android:text="联系电话："
                android:id="@+id/tv5"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="35dp"/>

            <EditText
                android:textSize="15dp"
                android:textColor="@color/black"
                android:id="@+id/et5"
                android:layout_height="35dp"
                android:layout_width="match_parent"/>
        </TableRow>
        <TableRow
            android:layout_marginTop="2dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <TextView
                android:textColor="@color/colorText"
                android:text="物防施工单位："
                android:id="@+id/tv6"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="35dp"/>

            <EditText
                android:textSize="15dp"
                android:textColor="@color/black"
                android:id="@+id/et6"
                android:layout_height="35dp"
                android:layout_width="match_parent"/>
        </TableRow>
        <TableRow
            android:layout_marginTop="2dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <TextView
                android:textColor="@color/colorText"
                android:text="技防施工单位："
                android:id="@+id/tv7"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="35dp"/>

            <EditText
                android:textSize="20dp"
                android:textColor="@color/black"
                android:id="@+id/et7"
                android:layout_height="35dp"
                android:layout_width="match_parent"/>
        </TableRow>
        <TableRow
            android:layout_marginTop="2dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <TextView
                android:textColor="@color/colorText"
                android:text="业务库类别："
                android:id="@+id/tv8"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="35dp"/>
            <Spinner
                android:id="@+id/sp8_changsuo"
                android:layout_height="40dp"
                android:layout_width="match_parent"
                />

        </TableRow>
        <TableRow
            android:layout_marginTop="2dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <TextView
                android:textColor="@color/colorText"
                android:text="业务库面积："
                android:id="@+id/tv9"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="35dp"/>

            <EditText
                android:textSize="15dp"
                android:textColor="@color/black"
                android:id="@+id/et9"
                android:layout_height="35dp"
                android:layout_width="match_parent"/>
        </TableRow>
        <TableRow
            android:layout_marginTop="2dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <TextView
                android:textColor="@color/colorText"
                android:text="开工日期："
                android:id="@+id/tv10"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="35dp"/>

            <Spinner
                android:id="@+id/sp10_changsuo"
                android:layout_height="40dp"
                android:layout_width="match_parent"/>
        </TableRow>
        <TableRow
            android:layout_marginTop="2dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <TextView
                android:textColor="@color/colorText"
                android:text="完工日期："
                android:id="@+id/tv11"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="35dp"/>

            <Spinner
                android:id="@+id/sp11_changsuo"
                android:layout_height="40dp"
                android:layout_width="match_parent"/>
        </TableRow>

    <Button
        android:id="@+id/ywk_btn1"
        android:layout_marginTop="5dp"
        android:text="下一步"
        android:background="@drawable/buttonshape"
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:layout_height="30dp" />

</LinearLayout>
