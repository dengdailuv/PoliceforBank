<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorWitch"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:drawablePadding="10dp"
        android:drawableLeft="@mipmap/phone_icon"
        android:textColor="@color/colorGray"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:text="手机号："
        android:hint="请输入手机号"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/reg_phone" />

    <EditText
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:drawablePadding="10dp"
        android:drawableLeft="@mipmap/pwd_icon"
        android:textColor="@color/colorGray"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:text="密码："
        android:hint="请输入6位数密码"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/reg_pwd1" />

    <EditText
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:drawablePadding="10dp"
        android:drawableLeft="@mipmap/pwd_icon"
        android:textColor="@color/colorGray"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:text="确认密码："
        android:hint="请确认密码"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/reg_pwd2" />

    <EditText
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:drawablePadding="10dp"
        android:drawableLeft="@mipmap/city_icon"
        android:textColor="@color/colorGray"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:text="城市："
        android:hint="请输入城市"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/reg_city" />

    <EditText
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:drawablePadding="10dp"
        android:drawableLeft="@mipmap/email_icon"
        android:textColor="@color/colorGray"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:text="邮箱："
        android:hint="请输入邮箱"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/reg_email" />

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:text="确认"
            android:background="@drawable/button_bg"
            android:layout_marginTop="40dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/button" />
    </LinearLayout>

</LinearLayout>
